<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/drawable_feedback_dialog_bg"
    android:paddingBottom="@dimen/dp_26">

    <TextView
        android:id="@+id/tv_close"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/dp_16"
        android:layout_marginTop="@dimen/dp_16"
        android:text="@string/close"
        android:textColor="@color/blue_text_normal"
        android:textSize="@dimen/textsize_17" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@id/tv_close"
        android:layout_centerHorizontal="true"
        android:layout_marginStart="@dimen/dp_16"
        android:text="@string/feedbacks"
        android:textColor="@color/color_feedback_result_title"
        android:textSize="@dimen/textsize_17" />

    <TextView
        android:id="@+id/tv_feedback_count"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/tv_close"
        android:layout_marginStart="@dimen/dp_24"
        android:layout_marginTop="@dimen/dp_28"
        android:text="@string/feedback_response_count"
        android:textColor="@color/color_feedback_response_count"
        android:textSize="@dimen/textsize_13" />

    <TextView
        android:id="@+id/tv_survey_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/tv_feedback_count"
        android:layout_marginStart="@dimen/dp_20"
        android:layout_marginTop="@dimen/dp_16"
        android:layout_marginEnd="@dimen/dp_24"
        android:text="@string/feedback_survey_title"
        android:textColor="@color/color_feedback_result_title"
        android:textSize="@dimen/textsize_22" />

    <LinearLayout
        android:id="@+id/layout_survey"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/tv_survey_title"
        android:layout_marginTop="@dimen/dp_18"
        android:orientation="vertical"
        android:paddingStart="@dimen/dp_24"
        android:paddingEnd="@dimen/dp_24" />

    <TextView
        android:id="@+id/tv_push_survey"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="@dimen/dp_24"
        android:layout_marginEnd="@dimen/dp_24"
        android:background="@drawable/drawable_push_survey_bg"
        android:gravity="center"
        android:text="@string/feedback_push_result"
        android:textColor="@drawable/drawable_push_survey"
        android:textSize="@dimen/textsize_16" />

    <TextView
        android:id="@+id/tv_has_push_tip"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@id/tv_push_survey"
        android:layout_marginStart="@dimen/dp_24"
        android:layout_marginEnd="@dimen/dp_24"
        android:layout_marginBottom="@dimen/dp_12"
        android:gravity="center"
        android:text="@string/feedback_repush_tip"
        android:textColor="@color/color_has_pushed"
        android:textSize="@dimen/textsize_14"
        android:visibility="invisible" />
</RelativeLayout>
