<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginStart="@dimen/dp_12"
    android:layout_marginEnd="@dimen/dp_12"
    android:layout_marginBottom="@dimen/dp_34"
    android:background="@drawable/drawable_feedback_submit_dialog_bg">

    <RelativeLayout
        android:id="@+id/layout_submit"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/tv_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginStart="@dimen/dp_32"
            android:layout_marginTop="@dimen/dp_32"
            android:layout_marginEnd="@dimen/dp_32"
            android:gravity="center"
            android:text="@string/feedback_survey_title"
            android:textColor="@color/color_feedback_result_title"
            android:textSize="@dimen/textsize_24" />

        <LinearLayout
            android:id="@+id/layout_images"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/tv_title"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="@dimen/dp_24"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:scaleType="fitXY"
                android:src="@drawable/drawable_feedback_very_unsatisfied" />

            <ImageView
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_marginStart="@dimen/dp_24"
                android:scaleType="fitXY"
                android:src="@drawable/drawable_feedback_unsatisfied" />

            <ImageView
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_marginStart="@dimen/dp_24"
                android:scaleType="fitXY"
                android:src="@drawable/drawable_feedback_neutral" />

            <ImageView
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_marginStart="@dimen/dp_24"
                android:scaleType="fitXY"
                android:src="@drawable/drawable_feedback_satisfied" />

            <ImageView
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_marginStart="@dimen/dp_24"
                android:scaleType="fitXY"
                android:src="@drawable/drawable_feedback_very_satisfied" />
        </LinearLayout>

        <TextView
            android:id="@+id/tv_survey_content"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/layout_images"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="@dimen/dp_16"
            android:textColor="@color/color_feedback_result_title"
            android:textSize="@dimen/textsize_16" />

        <TextView
            android:id="@+id/tv_submit"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_48"
            android:layout_below="@id/tv_survey_content"
            android:layout_marginStart="@dimen/dp_24"
            android:layout_marginTop="@dimen/dp_20"
            android:layout_marginEnd="@dimen/dp_24"
            android:layout_marginBottom="@dimen/dp_24"
            android:background="@drawable/drawable_push_survey_bg"
            android:enabled="false"
            android:gravity="center"
            android:text="@string/feedback_submit"
            android:textColor="@drawable/drawable_push_survey"
            android:textSize="@dimen/textsize_16" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/layout_thank"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:visibility="gone">

        <ImageView
            android:id="@+id/icon_done"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="@dimen/dp_48"
            android:scaleType="fitXY"
            android:src="@drawable/icon_done" />

        <TextView
            android:id="@+id/tv_thank_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/icon_done"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="@dimen/dp_24"
            android:text="@string/feedback_thank_title"
            android:textColor="@color/color_feedback_result_title"
            android:textSize="@dimen/textsize_24" />

        <TextView
            android:id="@+id/tv_thank_done"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_48"
            android:layout_below="@id/tv_thank_title"
            android:layout_centerHorizontal="true"
            android:layout_marginStart="@dimen/dp_24"
            android:layout_marginTop="71dp"
            android:layout_marginEnd="@dimen/dp_24"
            android:layout_marginBottom="@dimen/dp_24"
            android:background="@drawable/drawable_feedback_confirm_push_bg"
            android:gravity="center"
            android:text="@string/feedback_done"
            android:textColor="@color/white"
            android:textSize="@dimen/textsize_16" />
    </RelativeLayout>

    <ImageView
        android:id="@+id/iv_close"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="9dp"
        android:layout_marginEnd="9dp"
        android:padding="5dp"
        android:scaleType="fitXY"
        android:src="@drawable/icon_survey_close" />

