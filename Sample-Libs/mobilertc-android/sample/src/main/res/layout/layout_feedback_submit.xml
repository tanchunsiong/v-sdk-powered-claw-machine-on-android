    <!--        android:textSize="12dp"-->
    <!--        android:textColor="@color/black"-->
    <!--        android:layout_alignParentBottom="true"-->
    <!--        android:layout_width="match_parent"-->
    <!--        android:layout_height="20dp"/>-->

</RelativeLayout>
