<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/drawable_feedback_dialog_bg">

    <TextView
        android:id="@+id/tv_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginStart="@dimen/dp_32"
        android:layout_marginTop="@dimen/dp_40"
        android:layout_marginEnd="@dimen/dp_32"
        android:gravity="center"
        android:text="@string/feedback_survey_title"
        android:textColor="@color/color_feedback_result_title"
        android:textSize="@dimen/textsize_24" />

    <LinearLayout
        android:id="@+id/layout_images"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/tv_title"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="@dimen/dp_18"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@drawable/icon_survey_very_unsatisfied_unselected" />

        <ImageView
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_marginStart="@dimen/dp_24"
            android:src="@drawable/icon_survey_unsatisfied_unselected" />

        <ImageView
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_marginStart="@dimen/dp_24"
            android:src="@drawable/icon_survey_neutral_unselected" />

        <ImageView
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_marginStart="@dimen/dp_24"
            android:src="@drawable/icon_survey_satisfied_unselected" />

        <ImageView
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_marginStart="@dimen/dp_24"
            android:src="@drawable/icon_survey_very_satisfied_unselected" />
    </LinearLayout>

    <TextView
        android:id="@+id/tv_push_to_participant_tip"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/layout_images"
        android:layout_marginStart="@dimen/dp_16"
        android:layout_marginTop="@dimen/dp_40"
        android:layout_marginEnd="@dimen/dp_16"
        android:gravity="center"
        android:text="@string/feedback_push_to_participant_tip"
        android:textColor="@color/color_feedback_result_title"
        android:textSize="@dimen/textsize_16" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:layout_below="@id/tv_push_to_participant_tip"
        android:layout_marginStart="@dimen/dp_16"
        android:layout_marginTop="@dimen/dp_24"
        android:layout_marginEnd="@dimen/dp_16"
        android:layout_marginBottom="@dimen/dp_34"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tv_cancel"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/drawable_feedback_confirm_cancel_bg"
            android:gravity="center"
            android:text="@string/feedback_cancel"
            android:textColor="@color/color_feedback_result_title"
            android:textSize="@dimen/textsize_16" />

        <TextView
            android:id="@+id/tv_push"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginStart="@dimen/dp_16"
            android:layout_weight="1"
            android:background="@drawable/drawable_feedback_confirm_push_bg"
            android:gravity="center"
            android:text="@string/feedback_push"
            android:textColor="@color/white"
            android:textSize="@dimen/textsize_16" />
    </LinearLayout>
</RelativeLayout>
